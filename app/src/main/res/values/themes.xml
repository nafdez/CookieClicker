<resources>
    <!-- Base application theme. -->
    <!-- Theme.Material3.DayNight.NoActionBar -->
    <style name="Base.Theme.Contador" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="fontFamily">@font/acme</item>
        <item name="android:statusBarColor">@color/cambridge_blue</item>
    </style>

    <style name="Theme.Contador" parent="Base.Theme.Contador" />

    <style name="background">
        <item name="android:background">@color/cambridge_blue</item>
    </style>

    <style name="background_game">
        <item name="android:background">@color/cambridge_blue</item>
    </style>

    <style name="info_bar_child">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="shopping_container">
        <item name="android:background">@drawable/shopping_drawable</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/textview_color</item>
    </style>

    <style name="button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">343dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="paddingStart">13dp</item>
        <item name="paddingEnd">13dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="buttonPrimary" parent="button">
        <item name="backgroundTint">@color/dark_moss_green</item>
    </style>

    <style name="buttonSecondary" parent="button">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/drab_dark_brown</item>
        <item name="strokeColor">@color/dark_moss_green</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="buttonTernary" parent="button">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/drab_dark_brown</item>
    </style>

    <style name="button_buy" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/black</item>

        <item name="cornerRadius">8dp</item>

        <item name="android:padding">8dp</item>

        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>

        <item name="android:backgroundTint">@color/dark_moss_green</item>
    </style>

    <style name="generic_list_view_style">
        <item name="android:background">@drawable/options_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">22dp</item>
    </style>
</resources>