<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Contador" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="fontFamily">@font/acme</item>
        <item name="android:statusBarColor">@color/backgroundGenericDark</item>
    </style>

    <style name="Theme.Contador" parent="Base.Theme.Contador" />

    <style name="background">
        <item name="android:background">@color/backgroundGenericDark</item>
    </style>

    <style name="background_game">
        <item name="android:background">@color/backgroundColorDark</item>
    </style>

    <style name="info_bar_child">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="shopping_container">
        <item name="android:background">@drawable/shopping_drawable</item>
    </style>

    <style name="textview_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:textColor">#050505</item>
    </style>

    <style name="button" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">343dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="paddingStart">13dp</item>
        <item name="paddingEnd">13dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="buttonPrimary" parent="button">
        <item name="backgroundTint">@color/buttonPrimaryDark</item>
        <item name="android:textColor">#E6E6E6</item>
    </style>

    <style name="buttonSecondary" parent="button">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/buttonTextSecondaryDark</item>
        <item name="strokeColor">@color/buttonPrimaryDark</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="buttonTernary" parent="button">
        <item name="backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/buttonTextSecondaryDark</item>
    </style>

    <style name="button_buy" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textColor">@color/black</item>

        <item name="cornerRadius">8dp</item>

        <item name="android:padding">8dp</item>

        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>

        <item name="android:backgroundTint">@color/buttonShoppingEnabledDark</item>
    </style>

    <style name="generic_list_view_style">
        <item name="android:background">@drawable/options_shape_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:paddingStart">22dp</item>
        <item name="android:paddingEnd">22dp</item>
    </style>
</resources>