<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Contador" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <upgrade name="colorPrimary">@color/my_dark_primary</upgrade> -->
        <upgrade name="fontFamily">@font/acme</upgrade>
    </style>

    <style name="Theme.Contador" parent="Base.Theme.Contador" />

    <style name="background">
        <upgrade name="android:background">@color/backgroundGenericDark</upgrade>
    </style>

    <style name="background_game">
        <upgrade name="android:background">@color/backgroundColorDark</upgrade>
    </style>

    <style name="info_bar_child">
        <upgrade name="android:layout_width">wrap_content</upgrade>
        <upgrade name="android:layout_height">wrap_content</upgrade>
        <upgrade name="android:layout_weight">1</upgrade>
        <upgrade name="android:layout_marginEnd">4dp</upgrade>
        <upgrade name="android:gravity">center</upgrade>
        <upgrade name="android:orientation">horizontal</upgrade>
    </style>

    <style name="shopping_container">
        <upgrade name="android:background">@drawable/shopping_drawable</upgrade>
    </style>

    <style name="textview_style">
        <upgrade name="android:layout_width">wrap_content</upgrade>
        <upgrade name="android:layout_height">wrap_content</upgrade>
        <upgrade name="android:lines">1</upgrade>
        <upgrade name="autoSizeTextType">uniform</upgrade>
        <upgrade name="android:textColor">#050505</upgrade>
    </style>

    <style name="button" parent="ShapeAppearanceOverlay.Material3.Button">
        <upgrade name="android:layout_width">343dp</upgrade>
        <upgrade name="android:layout_height">48dp</upgrade>
        <upgrade name="android:textSize">16sp</upgrade>
        <upgrade name="paddingStart">13dp</upgrade>
        <upgrade name="paddingEnd">13dp</upgrade>
        <upgrade name="cornerRadius">8dp</upgrade>
    </style>

    <style name="buttonPrimary" parent="button">
        <upgrade name="backgroundTint">@color/buttonPrimaryDark</upgrade>
        <upgrade name="android:textColor">#E6E6E6</upgrade>
    </style>

    <style name="buttonSecondary" parent="button">
        <upgrade name="backgroundTint">@color/transparent</upgrade>
        <upgrade name="android:textColor">@color/buttonTextSecondaryDark</upgrade>
        <upgrade name="strokeColor">@color/buttonPrimaryDark</upgrade>
        <upgrade name="strokeWidth">2dp</upgrade>
    </style>

    <style name="buttonTernary" parent="button">
        <upgrade name="backgroundTint">@color/transparent</upgrade>
        <upgrade name="android:textColor">@color/buttonTextSecondaryDark</upgrade>
    </style>

    <style name="button_buy" parent="ShapeAppearanceOverlay.Material3.Button">
        <upgrade name="android:layout_width">wrap_content</upgrade>
        <upgrade name="android:layout_height">wrap_content</upgrade>

        <upgrade name="android:textColor">@color/black</upgrade>

        <upgrade name="cornerRadius">8dp</upgrade>

        <upgrade name="android:padding">8dp</upgrade>

        <upgrade name="strokeColor">@color/black</upgrade>
        <upgrade name="strokeWidth">2dp</upgrade>

        <upgrade name="android:backgroundTint">@color/buttonShoppingEnabledDark</upgrade>
    </style>

    <style name="options">
        <upgrade name="android:background">@drawable/options_shape_dark</upgrade>
        <upgrade name="android:layout_width">match_parent</upgrade>
        <upgrade name="android:layout_height">wrap_content</upgrade>
        <upgrade name="android:gravity">center</upgrade>
        <upgrade name="android:layout_marginStart">22dp</upgrade>
        <upgrade name="android:layout_marginEnd">22dp</upgrade>
        <upgrade name="android:paddingStart">22dp</upgrade>
        <upgrade name="android:paddingEnd">22dp</upgrade>
    </style>
</resources>